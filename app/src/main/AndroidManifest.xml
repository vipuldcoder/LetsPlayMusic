<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.letsplaymusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MusicForDriving"
            android:label="@string/music_for_driving"/>
        <activity android:name=".TodaysPopularHits"
            android:label="@string/todays_popular_hits"/>
        <activity android:name=".TopAlbums"
            android:label="@string/top_albums"/>
        <activity android:name=".FeelingLucky"
            android:label="@string/felling_lucky" />
    </application>

</manifest>